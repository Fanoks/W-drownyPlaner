#:kivy 2.3.0
#:import NoTransition kivy.uix.screenmanager.NoTransition

MDFloatLayout:
    ScreenManager:
        id: scr
        #transition: NoTransition()

        MDScreen:
            md_bg_color: self.theme_cls.backgroundColor
            name: 'home'
            
            MDLabel:
                text: 'Home'
                pos_hint: {'center_y': 0.5}
                halign: 'center'
        
        MDScreen:
            md_bg_color: self.theme_cls.backgroundColor
            name: 'calender'
            
            MDLabel:
                text: 'Calender'
                pos_hint: {'center_y': 0.5}
                halign: 'center'
        
        MDScreen:
            md_bg_color: self.theme_cls.backgroundColor
            name: 'todo'
            MDFloatLayout:
                ScrollView:
                    pos_hint: {'x': 0, 'y': 0.1}
                    size_hint: 0.9, 0.8
                
                    MDList:
                        id: container
                
                MDFabButton:
                    icon: 'plus-thick'
                    on_release: app.show_task_dialog()
                    elevation_normal: 12
                    pos_hint: {'x': 0.8, 'y': 0.15}
                    theme_shadow_color: 'Custom'
                    shadow_color: 'olive'
        
        MDScreen:
            md_bg_color: self.theme_cls.backgroundColor
            name: 'settings'
            
            MDLabel:
                text: 'Settings'
                pos_hint: {'center_y': 0.5}
                halign: 'center'

    NavBar:
        size_hint: 1, 0.1
        pos_hint: {'x': 0, 'y': 0}
        elevation: 10
        md_bg_color: 'olive'

        MDGridLayout:
            cols: 4
            size_hint_x: 0.9
            spacing: 8
            pos_hint: {'x': 0.03, 'y': -0.05}

            MDIconButton:
                id: nav_icon1
                icon: 'home'
                ripple_scale: 0
                size: '85sp', '60sp'
                theme_text_color: 'Custom'
                text_color: 1, 1, 1, 1
                on_release:
                    scr.current = 'home'
                    app.change_color(self)
            
            MDIconButton:
                id: nav_icon2
                icon: 'calendar-blank'
                ripple_scale: 0
                size: '85sp', '60sp'
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1
                on_release:
                    scr.current = 'calender'
                    app.change_color(self)
            
            MDIconButton:
                id: nav_icon3
                icon: 'order-bool-ascending-variant'
                ripple_scale: 0
                size: '85sp', '60sp'
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1
                on_release:
                    scr.current = 'todo'
                    app.change_color(self)
            
            MDIconButton:
                id: nav_icon4
                icon: 'cog'
                ripple_scale: 0
                size: '85sp', '60sp'
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1
                on_release:
                    scr.current = 'settings'
                    app.change_color(self)
